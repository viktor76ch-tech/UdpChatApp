<Window x:Class="UdpChatApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Чат - Прототип" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ConnectButton" 
                    Content="Подключиться" 
                    Command="{Binding ToggleConnectionCommand}"
                    Width="100" Height="30" Margin="10"/>
            <TextBlock Grid.Column="1" 
                       Text="{Binding Status}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       FontWeight="Bold" Margin="10,0"/>
        </Grid>

        <!-- История сообщений -->
        <TextBox Grid.Row="1" 
                 Text="{Binding MessagesText, Mode=OneWay}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="10"
                 FontFamily="Consolas"/>

        <!-- Панель ввода -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageTextBox" 
                     Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="0" 
                     Margin="0,0,10,0"/>

            <Button x:Name="SendButton" 
                    Content="Отправить" 
                    Command="{Binding SendMessageCommand}"
                    Grid.Column="1" 
                    Width="80"/>
        </Grid>
    </Grid>
</Window>